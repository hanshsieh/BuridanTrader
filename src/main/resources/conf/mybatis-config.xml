<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <!-- Turn off auto mapping to prevent incorrectly mapping columns -->
        <setting name="autoMappingBehavior" value="NONE" />
    </settings>
    <typeAliases>
        <typeAlias alias="CandlestickModel" type="com.buridantrader.services.binance.CandlestickModel"/>
    </typeAliases>
    <environments default="production">
        <environment id="production">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="url" value="jdbc:sqlite:binance.sqlite"/>
                <property name="driver" value="org.sqlite.JDBC"/>
                <property name="username" value=""/>
                <property name="password" value=""/>
                <!-- SQLite doesn't support multiple transactions at a same time -->
                <property name="poolMaximumActiveConnections" value="1" />
                <property name="poolMaximumActiveConnections" value="1" />
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="conf/mybatis-mappers/candlestick-mapper.xml"/>
    </mappers>
</configuration>